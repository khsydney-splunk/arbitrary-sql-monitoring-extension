<monitor>
  <name>SqlExecutionMonitor</name>
  <type>managed</type>
  <description>Executes arbitrary SQL</description>
  <monitor-configuration>
  </monitor-configuration>
  <monitor-run-task>
    <type>java</type>
    <name>SqlExecutionMonitor Run Task</name>
    <display-name>SqlExecutionMonitor Task</display-name>
    <description>SqlExecutionMonitor Task</description>
    <execution-style>periodic</execution-style>
    <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
    <execution-timeout-in-secs>60</execution-timeout-in-secs>

    <task-arguments>
      <argument name="driver-class" is-required="false" default-value="com.intersys.jdbc.CacheDriver" />
      <argument name="url" is-required="true" default-value="jdbc:Cache://address:port/db_namespace" />
      <argument name="username" is-required="false" default-value="id" />
      <argument name="password" is-required="false" default-value="password" />
      <argument name="sql" is-required="false" default-value="custom_query" />
    </task-arguments>

    <java-task>
      <classpath>
        SqlMonitor.jar:lib/commons-lang-2.4.jar:lib/machineagent.jar:lib/cachejdbc.jar:lib/slf4j-api-1.7.36.jar
      </classpath>
      <impl-class>com.singularity.ee.agent.systemagent.monitors.ArbitrarySqlMonitor</impl-class>
    </java-task>
  </monitor-run-task>
</monitor>
